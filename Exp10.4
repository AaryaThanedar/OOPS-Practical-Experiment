#include <iostream>
using namespace std;

const int MAX = 10; 
// Class template for Stack
template <class T>
class Stack {
private:
    T arr[MAX];  
    int top;      
public:
    // Constructor
    Stack() {
        top = -1;
    }

   
    void push(T element) {
        if (top >= MAX - 1) {
            cout << "Stack Overflow! Cannot push " << element << endl;
        } else {
            arr[++top] = element;
            cout << element << " pushed into the stack." << endl;
        }
    }

  
    void pop() {
        if (top < 0) {
            cout << "Stack Underflow! No element to pop." << endl;
        } else {
            cout << arr[top--] << " popped from the stack." << endl;
        }
    }

   
    void display() {
        if (top < 0) {
            cout << "Stack is empty." << endl;
        } else {
            cout << "Stack elements: ";
            for (int i = top; i >= 0; i--)
                cout << arr[i] << " ";
            cout << endl;
        }
    }
};


int main() {
    cout << "=== Stack Implementation using Class Template ===" << endl;

    // Stack of integers
    Stack<int> intStack;
    intStack.push(10);
    intStack.push(20);
    intStack.push(30);
    intStack.display();
    intStack.pop();
    intStack.display();

    cout << "\n";

 
    Stack<float> floatStack;
    floatStack.push(5.5);
    floatStack.push(7.7);
    floatStack.display();
    floatStack.pop();
    floatStack.display();

    cout << "\n";

    
    Stack<char> charStack;
    charStack.push('A');
    charStack.push('B');
    charStack.display();
    charStack.pop();
    charStack.display();

    return 0;
}
