#include <iostream>
using namespace std;

class Number {
private:
    int num;

public:
   
    Number(int n = 0) {
        num = n;
    }

    void operator ++() {
        ++num;  
    }

    
    void display() {
        cout << "Number = " << num << endl;
    }
};

int main() {
    Number n1(10);

    cout << "Before increment: ";
    n1.display();

    
    ++n1;

    cout << "After increment: ";
    n1.display();

    return 0;
}
