#include <iostream>
#include <fstream>
using namespace std;

int main() {
    ifstream fin("sample.txt", ios::in); 
    if (!fin) {
        cout << "Error: Cannot open file 'sample.txt'!" << endl;
        return 1;
    }

    char ch;
    int digits = 0, spaces = 0;

   
    while (fin.get(ch)) {
        if (isdigit(ch))       
            digits++;
        else if (ch == ' ')    
            spaces++;
    }

    fin.close();

    cout << "Number of digits: " << digits << endl;
    cout << "Number of spaces: " << spaces << endl;

    return 0;
}
