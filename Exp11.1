#include <iostream>
using namespace std;


template <class T>
class MyVector {
private:
    T *arr;       
    int size;     
public:
      MyVector(int s) {
        size = s;
        arr = new T[size];
    }

   
    void accept() {
        cout << "Enter " << size << " elements:\n";
        for (int i = 0; i < size; i++) {
            cout << "Element " << i + 1 << ": ";
            cin >> arr[i];
        }
    }

    
    void display() {
        cout << "Vector Elements: ";
        for (int i = 0; i < size; i++) {
            cout << arr[i] << " ";
        }
        cout << endl;
    }

    
    void modify(int index, T newValue) {
        if (index >= 0 && index < size) {
            arr[index] = newValue;
            cout << "Element at index " << index << " modified successfully!\n";
        } else {
            cout << "Invalid index! Please enter a valid index.\n";
        }
    }

    // Destructor
    ~MyVector() {
        delete[] arr;
    }
};

int main() {
    int size;

    cout << "Enter the size of vector: ";
    cin >> size;

    MyVector<int> vec(size);

    vec.accept();
    vec.display();

    int index, newValue;
    cout << "\nEnter the index to modify (0-based): ";
    cin >> index;
    cout << "Enter new value: ";
    cin >> newValue;

    vec.modify(index, newValue);
    vec.display();

    return 0;
}
