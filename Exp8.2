#include <iostream>
#include <string>
using namespace std;

class Login {
protected:
    string name;
    string password;

public:
   
    virtual void accept() {
        cout << "Enter Name: ";
        cin >> name;
        cout << "Enter Password: ";
        cin >> password;
    }

    
    virtual void display() {
        cout << "Name: " << name << endl;
        cout << "Password: " << password << endl;
    }
};


class EmailLogin : public Login {
private:
    string emailID;

public:
    void accept() override {
        cout << "\n--- Email Login Details ---" << endl;
        cout << "Enter Name: ";
        cin >> name;
        cout << "Enter Password: ";
        cin >> password;
        cout << "Enter Email ID: ";
        cin >> emailID;
    }

    void display() override {
        cout << "\nEmail Login Details:" << endl;
        cout << "Name: " << name << endl;
        cout << "Password: " << password << endl;
        cout << "Email ID: " << emailID << endl;
    }
};


class MembershipLogin : public Login {
private:
    int memberID;

public:
    void accept() override {
        cout << "\n--- Membership Login Details ---" << endl;
        cout << "Enter Name: ";
        cin >> name;
        cout << "Enter Password: ";
        cin >> password;
        cout << "Enter Membership ID: ";
        cin >> memberID;
    }

    void display() override {
        cout << "\nMembership Login Details:" << endl;
        cout << "Name: " << name << endl;
        cout << "Password: " << password << endl;
        cout << "Membership ID: " << memberID << endl;
    }
};

int main() {
    
    Login *ptr;

    EmailLogin e;
    MembershipLogin m;

    
    ptr = &e;
    ptr->accept();
    ptr->display();

   
    ptr = &m;
    ptr->accept();
    ptr->display();

    return 0;
}
