#include <iostream>
#include <queue>  
using namespace std;

int main() {
    queue<int> q; 
    int choice, value;

    cout << "=== QUEUE IMPLEMENTATION USING STL ===\n";

    do {
        cout << "\n1. Enqueue (Push)";
        cout << "\n2. Dequeue (Pop)";
        cout << "\n3. Display Front Element";
        cout << "\n4. Display Queue Size";
        cout << "\n5. Display All Elements";
        cout << "\n6. Exit";
        cout << "\nEnter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Enter value to enqueue: ";
                cin >> value;
                q.push(value);
                cout << value << " added to the queue.\n";
                break;

            case 2:
                if (!q.empty()) {
                    cout << q.front() << " removed from the queue.\n";
                    q.pop();
                } else {
                    cout << "Queue is empty!\n";
                }
                break;

            case 3:
                if (!q.empty())
                    cout << "Front element: " << q.front() << endl;
                else
                    cout << "Queue is empty!\n";
                break;

            case 4:
                cout << "Queue size: " << q.size() << endl;
                break;

            case 5:
                if (q.empty()) {
                    cout << "Queue is empty!\n";
                } else {
                    queue<int> temp = q; // Copy queue for display
                    cout << "Queue elements: ";
                    while (!temp.empty()) {
                        cout << temp.front() << " ";
                        temp.pop();
                    }
                    cout << endl;
                }
                break;

            case 6:
                cout << "Exiting program...\n";
                break;

            default:
                cout << "Invalid choice! Try again.\n";
        }

    } while (choice != 6);

    return 0;
}
